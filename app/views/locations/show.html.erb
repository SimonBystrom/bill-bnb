    <div class="location-banner" style="background-image: url(<%= @location.photo.attached? ? cl_image_path(@location.photo.key) : 'https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg' %>)">
    </div>
<div class="container justify-content-center">

    <div class="d-flex m-3">
      <div class="flex-grow-1">
        <div class="card p-3 mt-3 mr-5">
          <h2> <%= @location.name %> </h2>
          <p> <%= @location.description %> </p>
        </div>
        <div class="card p-3 mt-2 mr-5">
          <h4> Address </h4>
          <p> <%= @location.address %> </p>
        </div>
      </div>
      <div>
        <div class="card p-3 mt-3">
          <% if policy(Booking).create? %>
            <%= render 'bookings/form' %>
          <% end %>
        </div>
        <div class="card p-3 mt-2">
          <h4>$<%= @location.price_per_day %> / day</h4>
          <h4> <%= @location.capacity %> tables</h4>
        </div>
      </div>
    </div>
</div>

