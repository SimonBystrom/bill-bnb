<% @locations.each do |location| %>
  <div class="d-flex p-3 mb-3 border-top border-bottom border-secondary rounded-sm location-card">
    <div class="location-info flex-grow-1 mb-5">
      <div>
        <h3> <%= location.name %> </h3>
        <p> <%= location.description %> </p>
      </div>
      <div class="d-flex mt-5">
        <h5 class='flex-grow-1'> $<%= location.price_per_day %> / day </h5>
        <h5 class="mr-3"> <%= location.capacity %> tables </h5>
      </div>
    </div>
    <%= cl_image_tag(location.photo.key, class: 'rounded-sm') %>
    <%= link_to '', location_path(location), class: 'location-card-link' %>
  </div>
<% end %>

