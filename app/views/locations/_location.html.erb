<% @locations.each do |location| %>
  <div class="d-flex p-3 mb-3  location-card">
    <div class="location-info flex-grow-1 mb-5">
      <div>
        <h3> <%= location.name %> </h3>
        <p> <%= location.description %> </p>
      </div>
      <div class="d-flex mt-5">
        <div class=' d-flex flex-grow-1'>
          <h5 class= 'mr-2'> $<%= location.price_per_day %> </h5>
          <p style='color: $light-gray'>per day</p>
        </div>

        <h5 class="mr-3"><i class="fas fa-user-friends"></i> <%= location.capacity %> </h5>
      </div>
    </div>
    <%= cl_image_tag(location.photo.key, class: 'rounded-sm') %>
    <%= link_to '', location_path(location), class: 'location-card-link' %>
  </div>
<% end %>

